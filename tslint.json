{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],

  "linterOptions": {
    "exclude": [
      "build*/",
      "bundles/",
      "config/",
      "coverage/",
      "footers/",
      "headers/",
      "lib/**",
      "passages/",
      "plugins/",
      "src/worldModeling/",
      "templates/"
    ]
  },

  "rules": {
    "interface-name": false,
    "jsx-self-close": false,
    "member-ordering": false,
    "no-console": false,
    "no-debugger": false,
    "no-empty-interface": false,
    "no-shadowed-variable": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": false
  },

  "jsRules": {
    "jsx-self-close": false,
    "member-ordering": false,
    "no-console": false,
    "no-debugger": false,
    "no-shadowed-variable": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": false
  }
}
